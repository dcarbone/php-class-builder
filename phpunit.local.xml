<?xml version="1.0"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
        bootstrap="./vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        verbose="true"
        stopOnFailure="false"
        processIsolation="false"
        backupGlobals="false"
        syntaxCheck="true"
        >

    <testsuites>
        <testsuite name="comments">
            <directory>src/Tests/Template/Comment</directory>
        </testsuite>
        <testsuite name="structure">
            <directory>src/Tests/Template/Structure</directory>
        </testsuite>
        <testsuite name="file">
            <file>src/Tests/Template/FileTemplateTest.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./test-reports/report" charset="UTF-8"
             highlight="true" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>